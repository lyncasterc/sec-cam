<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SecCam | Log In</title>
</head>
<style>
  .error-message {
    color: red;
  }

  .general-error-container, .input-error {
    display: none;
  }

  .general-error-container.show, .input-error.show {
    display: block;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
  }

  .form-group label {
    margin-bottom: 5px;
  }

  .login-form-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .form-group input {
    padding: 5px;
    border-radius: 5px;
    border: 1px solid #868686;
  }

  a {
    color: #007bff;
  }
</style>
<body>
  <div class="login-form-container">
    <h1>Log In</h1>

    <div class="general-error-container">
      <p class="error-message">
        <% if (typeof error !== 'undefined') { %>
          <%= error %>
        <% } %>
      </p>
    </div>

    <form action="/login" method="post" class="login-form">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="username" name="username" autocomplete="username" required>
        <div class="input-error username-error">
          <p class="error-message"></p>
        </div>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" autocomplete="current-password" required>
        <div class="input-error password-error">
          <p class="error-message"></p>
        </div>
      </div>

      <button type="submit" class="login-btn">Log In</button>
      

      <p>
        Don't have an account? <a href="/register">Register</a>
      </p>
    </form>

    <script src="/js/login.js"></script>
  </div>
</body>
</html>